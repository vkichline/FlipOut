@using FlipOut.Logic
@{
    Board b = ViewBag.Board as Board;
}

@functions {
    public string d(int row, int col) {
        Board b = ViewBag.Board as Board;
        return b[row, col] ? "H" : "T";
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>Flip Out Coint Trick</title>
    <style>
        .board td {
            padding: 0 4px 0 4px
        }
    </style>
</head>
<body>
    <table class="board">
        <tbody>
            <tr><td>@d(0, 0)</td><td>@d(0, 1)</td><td>@d(0, 2)</td><td>@d(0, 3)</td><td>@d(0, 4)</td><td>@d(0, 5)</td><td>@d(0, 6)</td><td>@d(0, 7)</td></tr>
            <tr><td>@d(1, 0)</td><td>@d(1, 1)</td><td>@d(1, 2)</td><td>@d(1, 3)</td><td>@d(1, 4)</td><td>@d(1, 5)</td><td>@d(1, 6)</td><td>@d(1, 7)</td></tr>
            <tr><td>@d(2, 0)</td><td>@d(2, 1)</td><td>@d(2, 2)</td><td>@d(2, 3)</td><td>@d(2, 4)</td><td>@d(2, 5)</td><td>@d(2, 6)</td><td>@d(2, 7)</td></tr>
            <tr><td>@d(3, 0)</td><td>@d(3, 1)</td><td>@d(3, 2)</td><td>@d(3, 3)</td><td>@d(3, 4)</td><td>@d(3, 5)</td><td>@d(3, 6)</td><td>@d(3, 7)</td></tr>
            <tr><td>@d(4, 0)</td><td>@d(4, 1)</td><td>@d(4, 2)</td><td>@d(4, 3)</td><td>@d(4, 4)</td><td>@d(4, 5)</td><td>@d(4, 6)</td><td>@d(4, 7)</td></tr>
            <tr><td>@d(5, 0)</td><td>@d(5, 1)</td><td>@d(5, 2)</td><td>@d(5, 3)</td><td>@d(5, 4)</td><td>@d(5, 5)</td><td>@d(5, 6)</td><td>@d(5, 7)</td></tr>
            <tr><td>@d(6, 0)</td><td>@d(6, 1)</td><td>@d(6, 2)</td><td>@d(6, 3)</td><td>@d(6, 4)</td><td>@d(6, 5)</td><td>@d(6, 6)</td><td>@d(6, 7)</td></tr>
            <tr><td>@d(7, 0)</td><td>@d(7, 1)</td><td>@d(7, 2)</td><td>@d(7, 3)</td><td>@d(7, 4)</td><td>@d(7, 5)</td><td>@d(7, 6)</td><td>@d(7, 7)</td></tr>
        </tbody>
    </table>

    <p>
        Board value: @b.Value
    </p>
<pre>
@b.TryAll()
</pre>
</body>
</html>


